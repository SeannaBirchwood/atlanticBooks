<body class="whitefeather">
<div class="page-header">
  <h3>Edit your profile, <%= current_user.username %></h3>
</div>
<%= form_for (@user) do |form| %>
  <% if @user.errors.any? %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert">x</a>
    <% for message in @user.errors.full_messages %>
      <%= message %> <br />
    <% end %>
  </div>
  <% end %>
  <div class="control-group">
    <dl class="dl-verticle">
      <dt>Change Username:<dt>
      <dd><%= form.text_field :username %></dd>
      <br>
      <dt>Change Email:</dt>
      <dd><%= form.text_field :email %></dd>
      <br>
      <dt>Change Password:</dt>
      <dd><%= form.password_field :password %></dd>
      <br>
      <dt>Confirm Password:</dt>
      <dd><%= form.password_field :password_confirmation %></dd>
      <br>
      <dt>Change City:</dt>
      <dd><%= form.text_field :city %></dd>
      <br>
      <dt>Change Province:</dt>
      <dd><%= form.text_field :province %></dd>
      <br>
      <div class="chngprofile">
        <dt>Change Profile Picture:</dt>
        <dd><%= form.file_field :avatar %></dd>
      </div>
      <br>
      <%= form.submit "Save Changes" %>
    </dl>
  </div>
<% end %>
</body>
