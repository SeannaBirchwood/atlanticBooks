<h1>This is a placeholder for a individual user profile</h1>
<section class="users-profile">
  <header class="page-header">
    <h1> <%= link_to 'All users', '/users' %> </h1>
  </header>
  <article class="user-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag current_user.avatar, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @user.username %></dd>
          <dt>Location</dt>
          <dd><%= @user.location %></dd>
          <dt>Bookclubs</dt>
          <dd><%= @user.bookclub %></dd>
          <dt>Wishlist</dt>
          <dd><%= @user.wishlist %></dd>
          <dt>Bookshelf</dt>
          <dd><%= @user.bookshelf %></dd>
        </dl>
      </div>
      <div>
        <% if current_user %>
          <div>Edit your profile</div>
          <span>Create a form_for here</span>
        <% end %>
      </div>
    </article>
  </section>
