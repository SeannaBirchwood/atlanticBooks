<section class="users-profile">
  <header class="page-header">
    <h4> Go back to <%= link_to ' all users', '/users' %> </h4>
  </header>
  <article class="user-detail">
    <div class="row">
      <div class="col-sm-4">
        <% if @user.avatar.present? %>
        <%= image_tag @user.avatar %>
        <% else %>
        <a class="navbar-brand"><img style="max-height: 70px; padding-top: -5px; padding-bottom: 8px;" alt="default profile" src="default-profile.png" ></a>
        <% end %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-vertical">
          <dt><%= link_to "Wishlist", '/users/:user_id/wishlist' %></dt>
          <dt>Bookshelf</dt>
          <dt>Favourites</dt>
          <dt>Bookclubs</dt>
        </dl>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @user.username %></dd>
          <dt>Location</dt>
          <dd><%= @user.location %></dd>
        </dl>
      </div>
      <div>
        <% if current_user %>
          <div><%= link_to "Edit", '/user_id/edit'%> your profile</div>
        <% end %>
      </div>
    </article>
  </section>
