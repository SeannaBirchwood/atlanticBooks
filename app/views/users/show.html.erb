<section class="users-profile">
  <header class="page-header">
    <h4> Go back to <%= link_to ' all users', '/users' %> </h4>
  </header>
  <article class="user-detail">
    <div class="row">
      <div class="col-sm-4">
      <%= image_tag @user.avatar, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @user.username %></dd>
          <dt>Location</dt>
          <dd><%= @user.location %></dd>
          <dt>Bookclubs</dt>
          <dd><%= @user %></dd>
          <dt>Wishlist</dt>
          <dd><%= @user %></dd>
          <dt>Bookshelf</dt>
          <dd><%= @user %></dd>
        </dl>
      </div>
      <div>
        <% if current_user %>
          <div>Edit your profile</div>
          <span>Create a form_for here</span>
        <% end %>
      </div>
    </article>
  </section>
