<% quantity = details['quantity'].to_i %>

<% if book = Book.find_by(id: book_id) %>
  <% item_total = quantity %>
  <% @wishlist_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= book.name %></h4>
      <br>
      <p><%= book.description %></p>
    </td>
    <td>
      <%= link_to remove_item_wishlist_path(book_id: book_id), class: 'btn btn-xs btn-danger', method: :delete do %>
      -
      <% end %>
      <%= quantity %>
      <%= link_to add_item_wishlist_path(book_id: book_id), class: 'btn btn-xs btn-success', method: :put do %>
      +
      <% end %>
    </td>
    <td>
      <%= item_total %>
    </td>
  </tr>
<% end %>
